@model DAL.EF.Product
<h1>Are you sure you want to delete this?</h1>
<div>
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <h2>List of Products</h2>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.productName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.dayCreated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.brandID)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.productName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.price)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.dayCreated)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.description)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.status)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Brand.brandName)
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("Delete", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>