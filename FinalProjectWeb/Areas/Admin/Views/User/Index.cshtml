
@model PagedList.IPagedList<DAL.EF.User>
@using PagedList.Mvc
 

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    @using (Html.BeginForm("Index", "User", FormMethod.Post))
    {
        <h1 class="h3 mb-2 text-gray-800">Search</h1>
        <input type="text" value="@ViewBag.Search" name="txtSearch" placeholder="Search...." />

        <button type="submit">Search</button>
    }

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <h2>List of Products</h2>
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Password</th>
                            <th>Status</th>
                            <th>Day Create</th>
                            <th>Role</th>
                            <th>Email</th>
                            <th>Update</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.userID">
                                <td>@item.userID</td>
                                <td>@item.fullName</td>
                                <td>@item.password</td>
                                <td>@item.status</td>
                                <td>@item.dateCreated</td>
                                <td>@item.roleID</td>
                                <td>@item.email</td>
                                <td>
                                    <a href="/Admin/User/Edit/@item.userID">Update</a>
                                </td>
                                <td>
                                    <a href="/Admin/User/Delete/@item.userID">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @txtSearch = @ViewBag.Search }))
            </div>
        </div>
    </div>

</div>





