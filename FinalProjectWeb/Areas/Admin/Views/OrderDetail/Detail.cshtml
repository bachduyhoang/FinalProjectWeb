
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model FinalProjectWeb.Areas.Admin.Models.OrderDetailModel
<h2>Detail</h2>


<b>Order ID: </b>@Model.order.orderID<br>
<b>Order date: </b>@Model.order.date<br>
<b>Status: </b>@Model.order.status<br>
<b>DiscountID: </b>@Model.order.discountID<br>
<b>UserID: </b>@Model.order.userID<br>
<table class="table">
    <thead>
        <tr>
            <th>orderDetailID</th>
            <th>orderID</th>
            <th>productID</th>
            <th>productName</th>
            <th>imageLink</th>
            <th>price</th>
            <th>quantity</th>
            <th>total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.list)
        {
            <tr>
                <td>@item.orderDetailID</td>
                <td>@item.orderID</td>
                <td>@item.productID</td>
                <td>@item.productName</td>
                <td>
                    <img src="@item.imageLink" alt="Girl in a jacket" width="300" height="300">
                </td>
                <td>@item.price</td>
                <td>@item.quantity</td>
                <td>@item.total</td>
            </tr>
        }
    </tbody>
</table>

